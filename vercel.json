{
  "version": 2,
  "name": "nexus-dashboard",
  "builds": [
    {
      "src": "src/dashboard/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/logo.svg", "dest": "/src/dashboard/logo.svg" },
    { "src": "/", "dest": "/src/dashboard/index.html" },
    { "src": "/(.*)", "dest": "/src/dashboard/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
